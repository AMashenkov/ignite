div(class=['modal', 'center'] tabindex='-1' role='dialog')
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type='button', ng-click='$hide()', aria-hidden='true') &times;
                h4.modal-title Configure Indexed Types
            form.form-horizontal(name='indexedTypeForm')
                .modal-body.row
                    .col-sm-10.login.col-sm-offset-1
                        .form-group
                            label.col-sm-3.control-label Key Class:
                            .controls.col-sm-9
                                input.form-control(type='text')
                        .form-group
                            label.col-sm-3.control-label Value Class:
                            .controls.col-sm-9
                                input.form-control(type='text')
                .modal-footer
                    button.btn.btn-primary(ng-click='saveIndexedType(key, val)' ng-disabled='discoveryForm.$invalid') Save
                    button.btn.btn-primary(ng-click='$hide()') Cancel
