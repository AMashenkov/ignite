extends layout
block head
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.js')
    script(src='/javascripts/controllers/cluster.js')

block content
    include includes/header
    div.container(ng-controller='cluster')
        table
            tr
                th Name
                th Discovery
            tr(ng-repeat='cluster in clusters')
                td {{cluster.name}}
                td {{cluster.discovery}}


        form(class=['navbar-form', 'navbar-left'] ng-submit='submit()')
            Enter text and hit enter:
            input.form-control(type='text' ng-model='text' name='text')
            input(type='submit' class=['btn', 'btn-default'] value='Submit')
            pre list={{list}}

    include includes/footer